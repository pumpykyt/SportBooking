@model SportBooking.BLL.Dtos.UserEditDto

<div class="min-h-screen w-full pt-36">
    <div class="rounded shadow-lg w-1/3 px-12 py-3 mx-auto">
        <form asp-action="EditProfile" method="post">
            <div class="mb-4">
                <label asp-for="FirstName" class="control-label"></label>
                <input type="text" asp-for="FirstName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="LastName" class="control-label"></label>
                <input type="text" asp-for="LastName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <button class="bg-blue-600 px-3 py-2 text-white rounded" type="submit">Edit profile</button>
            </div>
        </form>
    </div>
</div>