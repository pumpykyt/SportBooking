@model SportBooking.BLL.Dtos.ChangePasswordDto

<div class="min-h-screen w-full pt-36">
    <div class="rounded shadow-lg w-1/3 px-12 py-3 mx-auto">
        <form asp-action="ChangePassword" method="post">
            <div class="mb-4">
                <label asp-for="Password" class="control-label">New password</label>
                <input type="password" asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <button class="bg-blue-600 px-3 py-2 text-white rounded" type="submit">Change</button>
            </div>
        </form>
    </div>
</div>
